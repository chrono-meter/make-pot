{
  "compilerOptions": {
	"module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    // Import non-ES modules as default imports.
    "outDir": "lib",
    "rootDir": "src",
    // Minify
    "pretty": false,
    "removeComments": true,
    // types
    "typeRoots": ["src/types.d.ts", "node_modules/@types", "@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/makeJson.ts"]
}
