{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"moduleResolution": "Node16",
		"lib": [ "es2021" ],
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"outDir": "lib",
		"rootDir": "src"
	},
	"include": [
		"./src/**/*.ts",
	]
}
