{
	"name": "@wp-blocks/make-pot",
	"version": "0.2.2",
	"description": "A Node.js script for generating a POT file from source code",
	"author": "Erik Golinelli <https://github.com/erikyo>",
	"main": "lib/index.js",
	"scripts": {
		"postinstall": "npm rebuild tree-sitter tree-sitter-typescript tree-sitter-php tree-sitter-javascript --force",
		"build": "tsc --build",
		"watch": "tsc --watch",
		"clean": "tsc --build --clean",
		"lint": "eslint ./src ./tests --fix",
		"test": "jest",
		"update-snapshots": "jest -- -u",
		"run": "node ./lib/index.js tests/fixtures/sourcedir/"
	},
	"bin": {
		"make-pot": "lib/index.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/wp-blocks/makePot.git"
	},
	"bugs": {
		"url": "https://github.com/wp-blocks/makePot/issues"
	},
	"dependencies": {
		"cli-progress": "^3.12.0",
		"gettext-merger": "^0.1.0",
		"gettext-parser": "^7.0.1",
		"glob": "^10.3.10",
		"tree-sitter": "^0.20.6",
		"tree-sitter-javascript": "^0.20.4",
		"tree-sitter-php": "^0.20.0",
		"tree-sitter-typescript": "^0.20.5",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/cli-progress": "^3.11.5",
		"@types/gettext-parser": "^4.0.4",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.19",
		"@types/strip-comments": "^2.0.4",
		"@types/yargs": "^17.0.32",
		"@typescript-eslint/eslint-plugin": "^6.18.1",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.56.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-config-standard-with-typescript": "^43.0.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.1",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"prettier": "3.2.5",
		"ts-jest": "^29.1.2",
		"typescript": "^5.3.3"
	}
}
